{
  "compilerOptions": {
    "target": "es2017",
    "lib": [ "dom","es6" ],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "rootDir": "src",
  },
	"include": ["src/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
